<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/fhseTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/roboto_light"
        android:text="Settings"
        android:textAppearance="@style/HoroscopeHeading" />

    <RelativeLayout
        android:id="@+id/fhseNotificationC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fhseTitle">

        <RelativeLayout
            android:id="@+id/fhseNotificationIC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="32dp"
                android:fontFamily="@font/roboto_medium"
                android:textAppearance="@style/HoroscopeSettingsMain"
                android:text="Notifications" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/fhseNotification"
                android:layout_marginRight="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fhseNotificationIC"
            android:layout_marginLeft="32dp"
            android:fontFamily="@font/roboto"
            android:textAppearance="@style/HoroscopeSettingsCaption"
            android:text="Turn on/off notifications"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fhseMusicC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/fhseNotificationC">

        <RelativeLayout
            android:id="@+id/fhseMusicIC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="32dp"
                android:fontFamily="@font/roboto_medium"
                android:textAppearance="@style/HoroscopeSettingsMain"
                android:text="Music"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/fhseMusic"
                android:layout_marginRight="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fhseMusicIC"
            android:layout_marginLeft="32dp"
            android:fontFamily="@font/roboto"
            android:textAppearance="@style/HoroscopeSettingsCaption"
            android:text="Turn on/off music"/>

    </RelativeLayout>


</RelativeLayout>