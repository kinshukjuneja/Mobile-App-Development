<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    tools:context="edu.neu.madcourse.kinshukjuneja.activity.ScroggleEndActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bigScoreTV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/b_5"
            android:fontFamily="@font/luckiest_guy"
            android:gravity="center"
            android:text="Score : 0"
            android:textColor="@android:color/black"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lakki_reddy"
                android:gravity="bottom"
                android:text="Words Found"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/wordlistTV"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:fontFamily="@font/lakki_reddy"
                android:isScrollContainer="false"
                android:padding="8dp"
                android:scrollbars="vertical"
                android:textColor="@android:color/holo_green_light"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <Button
                android:id="@+id/mainMenuButton"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/menu3"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center|clip_horizontal"
                android:onClick="onClickMainMenu"
                android:text="Main Menu"
                android:textColor="@android:color/black"
                android:textSize="24sp" />
        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
