<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HoroscopeAppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="HoroscopeAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="HoroscopeHeading" parent="AppTheme">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="HoroscopeBody" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="HoroscopePrediction" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="HoroscopeButtonTheme" parent="AppTheme">
        <item name="android:colorAccent">#8654e2</item>
    </style>

    <style name="HoroscopeSettingsMain" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="HoroscopeSettingsCaption" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

</resources>
